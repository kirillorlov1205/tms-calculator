<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Smoke" parallel="tests" thread-count="2">
    <test name="Sum calculation test">
        <classes>
            <class name="SumTest"></class>
        </classes>
    </test>
    <test name="Subtraction test">
        <classes>
            <class name="SubtractionTest"></class>
        </classes>
    </test>
    <test name="Division test">
        <classes>
            <class name="DivisionTest"></class>
        </classes>
    </test>
    <test name="Multiplication test">
        <classes>
            <class name="MultiplicationTest"></class>
            <parameter name="num1" value="0"></parameter>
            <parameter name="num2" value="1"></parameter>
        </classes>
    </test>
</suite>